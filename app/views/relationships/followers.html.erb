<% breadcrumb :followers %>
<div class="container">
  <h3 class="contents-title">フォロワー一覧</h3>
  <% if @users.exists? %>
    <div class="users-index">
      <% @users.each do |user| %>
        <div class="users-index-item">
          <div class="user-left">
            <%= image_tag user.image.url %>
          </div>
          <div class="user-right">
            <%= link_to(user.name, "/users/#{user.id}") %>
          </div> 
        </div>
      <% end %>
    </div> 
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>
</div> 