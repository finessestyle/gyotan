<% breadcrumb :maps_create %>
<div class="container">
  <h3 class="contents-title">ポイント投稿</h3>
  <div class="form">
    <div class="form-body">
      <% @map.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
      
      <%= form_with model: @map, url: "/maps/create", local: true do |form| %>
        <%= form.label "タイトル" %>
        <%= form.text_field :title %>

        <%= form.label "エリア選択" %>
        <%= form.select :area,
          [
            ["北湖北"],["北湖東"],["北湖西"],["南湖東"],["南湖西"]
          ],
        prompt: "エリアを選択してください" %>

        <%= form.label "緯度" %>
        <%= form.text_field :latitude %>

        <%= form.label "経度" %>
        <%= form.text_field :longitude %>

        <%= form.label "地理院地図URL" %>
        <%= form.text_field :url %>
        
        <%= form.label "画像" %>
        <%= form.file_field :image %>

        <%= form.label "内容" %>
        <%= form.rich_text_area :content %>

        <%= form.submit "投稿" %>
      <% end %>
    </div>
  </div>
</div>

<div class="go-home">
  <%= link_to("<ページの上へ戻る>", "#top") %>
</div>