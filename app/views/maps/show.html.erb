<div class="main">
  <div class="container">
    <h1 class="form-heading">ブログ詳細</h1>
    <div class="map-show-item">
      <% if @map.user_id == @current_user.id %>
        <div class="post-menus">
          <%= link_to("編集", "/maps/#{@map.id}/edit") %>
          <%= link_to("削除", "/maps/#{@map.id}/destroy", {method: "post"}) %>
        </div>
      <% end %>
      
      <div class="map-time">
        <%= @map.created_at.strftime("%Y-%m-%d") %>
      </div>

      <p class="map-title">
        <%= @map.title %>
      </p>

      <p>
        <%= @map.content %>
      </p>

      

    </div>
  </div>
</div>