<% content_for :title do %>
  お問い合わせフォーム
<% end %>

<% breadcrumb :contacts %>
<div class="container">
  <h3 class="contents-title">お問い合わせフォーム</h3>
  <div class="form">
    <div class="form-body">
      <% @contact.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>

      <%= form_with model: Contact.new, url:"/contacts/create",  local: true do |f| %>
        <div class="contact-form">
          <%= f.label "お名前" %>
          <%= f.text_field :name %>
          <%= f.label "E-mail" %>
          <%= f.email_field :email %>
          <%= f.label "お問合せ内容" %>
          <%= f.text_area :content %>
          <%= f.submit "送信" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="go-home">
  <%= link_to("<ページの上へ戻る>", "#top") %>
</div>
