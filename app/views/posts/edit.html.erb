<% breadcrumb :posts_edit %>
<div class="container">
  <h3 class="contents-title">釣果編集</h3>

  <%= form_with model: @post, url: "/posts/#{@post.id}/update", local: true do |form| %>
    <div class="form">
      <div class="form-body">

        <% @post.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form.label "タイトル" %>
        <%= form.text_field :title, maxlength: 32, value: @post.title %>

        <%= form.label "釣果画像" %><span> ※３枚以下</span>
        <%= form.file_field :images, multiple: true, value: @post.images %>
        
        <%= form.label "天気" %>
        <%= form.select :weather,
        [
          ["晴れ"],["曇り"],["雨"],["雪"],
        ] ,
        prompt: "天気を選択してください", value: @post.weather %>

        <%= form.label "釣果内容" %><span> ※詳しく状況を記入して下さい</span>
        <%= form.text_area :content, maxlength: 140, value: @post.content %>

        <%= form.label "釣果エリア" %>
        <%= form.select :fish_area,
          [
            ["北湖北エリア"],["北湖東エリア"],["北湖西エリア"],["南湖東エリア"],["南湖西エリア"]
          ] ,
        prompt: "釣果エリアを選択してください", value: @post.fish_area %>
        
        
        <%= form.label "サイズ" %><span> ※30cm以上</span>
        <%= form.number_field :length, min: 30, max: 75, step: "0.5", value: @post.length %>

        <%= form.label "重さ" %><span> ※500g以上</span>
        <%= form.number_field :weight, min: 500, max: 10000, step: "5", value: @post.weight %>
          
        <%= form.label "ルアー種類" %>
        <%= form.select :lure,
          [
          ["クランクベイト"],["ディープクランク"],["ミノー"],["シャッド"],["バイブレーション"],["スピナーベイト"],["バズベイト"],["チャターベイト"],["ビッグベイト"],["I字系"],
          ["ラバージグ"],["フットボールジグ"],["メタルベイト"],["ウェィクベイト"],["ポッパー"],["ペンシルベイト"],["プロップベイト"],["ハネモノ"],["フロッグ"],
          ["スモラバ"],["ネコリグ"],["ミドスト"],["ノーシンカーリグ"],["ジグヘッドワッキー"],["ダウンショットリグ"],["虫系"],
          ["ヘビキャロ"],["テキサスリグ"],["スイムベイト"],["シャッドテール"],
          ] ,
          prompt: "ルアーを選択してください", value: @post.lure %>
        
        <%= form.label "ルアーカラー" %>
        <%= form.select :lure_color,
        [
          ["ゴールド"],["シルバー"],["レッド"],["ブルー"],["チャート"],["パープル"],["ゴースト"],["ピンク"],
          ["ホワイト"], ["ブラック"],["クロー"],["ホロ"],["インナープレート"],["クリア"],
          ["ウォーターメロン"],["グリパン"],["スカッパノン"],["スモーク"],["ツートン"],
        ] ,
        prompt: "ルアーカラーを選択してください", value: @post.lure_color %>
        
        <%= form.label "釣果数" %>
        <%= form.number_field :catch_fish, min: 1, max: 50, step: "1", value: @post.catch_fish %>
        
        <%= form.submit "投稿" %>
      </div>
    </div>
  <% end %>
</div>