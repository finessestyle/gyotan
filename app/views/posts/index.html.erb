<div class="main">
  <div class="container">
    <h1 class="form-heading">釣果一覧</h1>
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="posts-index-datetime">
          <span>投稿日:</span>
          <%= post.created_at.strftime("%Y-%m-%d %H:%M") %><br>
          <%= link_to(post.user.name,"/users/#{post.user_id}") %><span>さんが釣果を投稿</span> 
        </div>
        <div class="post-user-image">
          <%= image_tag post.image.url %>
        </div>
        <div class="posts-index-right">
          <%= link_to("👉釣果詳細はこちら","/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
