<div class="main">
  <div class="container">
    <div class="form-heading">アカウント編集</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        
        <%= form_with url: "/users/:id/update", local: true do |form| %>
          <p>ユーザー名</p>
          <%= form.text_field :name, value: @user.name %>
          <p>メールアドレス</p>
          <%= form.email_field :email, value: @user.email %>
          <p>プロフィール画像</p>
          <%= form.file_field :image_name, value: @user.image_name %>
          <p>プロフィール</p>
          <%= form.text_field :profile, value: @user.profile %>
          <%= form.submit "登録" %>
        <% end %>
        
      </div>
    </div>
  </div>
</div>