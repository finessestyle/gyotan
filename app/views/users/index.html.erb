<% breadcrumb :users %>
<div class="container">
  <h3 class="contents-title">ユーザー一覧</h3>
  <div class="posts-contents">
    <% @users.each do |user| %>
      <div class="posts-item">
        <div class="blog-title">
          <%= link_to(user.name, "/users/#{user.id}") %> さん
        </div>
        <div class="top-user-image">
          <%= image_tag user.image.url, alt: "投稿されたブログ画像" %>
        </div>
        <div class="user-post-datetime">
          <span>登録日：</span>
          <%= user. created_at.strftime("%Y-%m-%d") %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="go-home">
  <%= link_to("<ページの上へ戻る>", "#top") %>
</div>
