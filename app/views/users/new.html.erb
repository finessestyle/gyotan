<div class="main">
  <div class="container">
    <div class="form-heading">新規登録</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        
        <%= form_with model: User.new, url: "/users/create", local: true do |form| %>
          <p>ユーザー名 ※10文字以内</p>
          <%= form.text_field :name, size: 10 %>
          <p>メールアドレス</p>
          <%= form.email_field :email %>
          <p>パスワード</p>
          <%= form.password_field :password %>
          <p>プロフィール画像</p>
          <%= form.file_field :image %>
          <p>プロフィール ※30文字以内</p>
          <%= form.text_field :profile, size: 30 %>
          <%= link_to("☞ログインはこちらから", "/login") %>
          <%= form.submit "新規登録" %>
        <% end %>
        
      </div>
    </div>
  </div>
</div>