<div class="main">
  <div class="container">

    <h1 class="form-heading">アカウント情報</h1>

    <div class="user">
      <%= image_tag("/user_images/#{@user.image}") %>
      <h2><%= @user.name %></h2>

      <% if @user.id == @current_user.id %>
        <p><%= @user.email %></p>
      <% end %>
      <p><%= @user.profile %></p>
      <% if @user.id == @current_user.id %>
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %> 

      <% if @user.id != @current_user.id %>
        <% if @current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
        <% end %>
      <% end %>
    </div>

    <ul class="user-tabs">
      <li class="active"><%= link_to("投稿", "/users/#{@user.id}") %></li> 
      <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>
    
    <% @user.posts.each do |post| %>
      <div class="posts-index-item">
        <div class="user-post-left">
          <%= image_tag( "/post_images/#{post.image}" ) %>
        </div>
        <div class="user-post-right">
          <div class="post-user-name">
            <%= link_to(post.title,"/posts/#{post.id}") %>
          </div>
          <div class="user-post-datetime">
            <span>投稿日：</span>
            <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
          </div>
        </div>
      </div>
    <% end %> 
    
  </div>
</div>