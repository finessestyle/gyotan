<div class="main">
  <div class="container">
    <h1 class="form-heading">ブログ詳細</h1>
    <div class="blogs-index-item">
      <% if session[:user_id] %>
        <% if @blog.user_id == @current_user.id %>
          <div class="post-menus">
            <%= link_to("編集", "/blogs/#{@blog.id}/edit") %>
            <%= link_to("削除", "/blogs/#{@blog.id}/destroy", {method: "post"}) %>
          </div>
        <% end %>
      <% end %>
      <div class="blog-time">
        <%= @blog.created_at.strftime("%Y-%m-%d") %>
      </div>

      <div class="blog-title">
        <%= @blog.title %>
      </div>

      <div class="blog-content">
        <%= @blog.content %>
      </div>

    </div>
    <p>
      <% if @blog.previous %>
        <%= link_to("<前のページ", "/blogs/#{@blog.id}.previous") %>
      <% end %>
      <% if @blog.next %>
        <%= link_to("次のページ>", "/blogs/#{@blog.id}.next") %>
      <% end %>
    </p>
  </div>
</div>