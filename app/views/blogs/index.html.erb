<% content_for :title do %>
  琵琶湖バス釣りブログ
<% end %>

<% breadcrumb :blogs %>

<div class="contents">
  <h3 class="contents-title">ブログ一覧</h3>
  <div class="posts-contents">
    <% @blogs.each do |blog| %>
      <div class="posts-item">
        <div class="blog-title">
          <%= link_to(blog.title, "/blogs/#{blog.id}") %>
        </div>
        <div class="top-user-image">
          <%= image_tag blog.image.url, alt: "投稿されたブログ画像" %>
        </div>
        <div class="user-post-datetime">
          <span>投稿日：</span>
          <%= blog.updated_at.strftime("%Y-%m-%d") %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="go-home">
  <%= link_to("<ページの上へ戻る>", "#top") %>
</div>
